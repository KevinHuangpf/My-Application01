<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4d9d9"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kevinhuang.myapplication01.MainActivity"
    tools:showIn="@layout/activity_main">


    <TextView
        android:id="@+id/tvLife"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="蛤蛤，江主席的生命变成了：" />

    <Button
        android:id="@+id/btnAddOneSec"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="续命加一秒" />

    <Button
        android:id="@+id/btnLoseOneSec"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="减命一秒" />

    <ImageView
        android:id="@+id/ivHelloJZX"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/jzx01" />

    <Button
        android:id="@+id/btnHelloJZX"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="江主席好！"
        android:textColor="#000000" />
</LinearLayout>
